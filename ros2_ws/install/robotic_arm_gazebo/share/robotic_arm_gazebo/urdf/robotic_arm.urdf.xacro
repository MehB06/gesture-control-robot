<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robotic_arm">
  <xacro:property name="pi" value="3.14159265359"/>

  <!-- Colors -->
  <material name="gray"><color rgba="0.7 0.7 0.7 1.0"/></material>
  <material name="blue"><color rgba="0.1 0.4 0.8 1.0"/></material>

  <!-- Base -->
  <link name="base_link">
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
    </inertial>
    <visual>
      <geometry><box size="0.3 0.3 0.1"/></geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry><box size="0.3 0.3 0.1"/></geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Shoulder tower -->
  <link name="shoulder_link">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry><box size="0.08 0.08 0.30"/></geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry><box size="0.08 0.08 0.30"/></geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Upper arm -->
  <link name="upper_arm_link">
    <inertial>
      <mass value="0.8"/>
      <inertia ixx="0.008" ixy="0" ixz="0" iyy="0.008" iyz="0" izz="0.008"/>
    </inertial>
    <visual>
      <geometry><box size="0.30 0.05 0.05"/></geometry>
      <origin xyz="0.15 0 0" rpy="0 0 0"/>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry><box size="0.30 0.05 0.05"/></geometry>
      <origin xyz="0.15 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Forearm -->
  <link name="forearm_link">
    <inertial>
      <mass value="0.6"/>
      <inertia ixx="0.006" ixy="0" ixz="0" iyy="0.006" iyz="0" izz="0.006"/>
    </inertial>
    <visual>
      <geometry><box size="0.25 0.045 0.045"/></geometry>
      <origin xyz="0.125 0 0" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry><box size="0.25 0.045 0.045"/></geometry>
      <origin xyz="0.125 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Wrist -->
  <link name="wrist_link">
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.003" ixy="0" ixz="0" iyy="0.003" iyz="0" izz="0.003"/>
    </inertial>
    <visual>
      <geometry><cylinder radius="0.03" length="0.08"/></geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.03" length="0.08"/></geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
  </link>

  <!-- Joints -->

  <!-- Pan at top of base -->
  <joint name="shoulder_pan_joint" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="20.0" velocity="1.5"/>
    <dynamics damping="0.2" friction="0.0"/>
  </joint>

  <!-- Shoulder pitch at top of tower -->
  <joint name="shoulder_pitch_joint" type="revolute">
    <parent link="shoulder_link"/>
    <child link="upper_arm_link"/>
    <origin xyz="0 0 0.30" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="15.0" velocity="1.5"/>
    <dynamics damping="0.1" friction="0.0"/>
  </joint>

  <!-- Elbow pitch at end of upper arm -->
  <joint name="elbow_joint" type="revolute">
    <parent link="upper_arm_link"/>
    <child link="forearm_link"/>
    <origin xyz="0.30 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.0" upper="2.0" effort="10.0" velocity="1.5"/>
    <dynamics damping="0.1" friction="0.0"/>
  </joint>

  <!-- Wrist roll at end of forearm -->
  <joint name="wrist_roll_joint" type="continuous">
    <parent link="forearm_link"/>
    <child link="wrist_link"/>
    <origin xyz="0.25 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <dynamics damping="0.05" friction="0.0"/>
  </joint>

  <!-- Gazebo visual tuning (optional) -->
  <gazebo reference="base_link"><mu1>1.0</mu1><mu2>1.0</mu2></gazebo>
  <gazebo reference="shoulder_link"><mu1>1.0</mu1><mu2>1.0</mu2></gazebo>
  <gazebo reference="upper_arm_link"><mu1>1.0</mu1><mu2>1.0</mu2></gazebo>
  <gazebo reference="forearm_link"><mu1>1.0</mu1><mu2>1.0</mu2></gazebo>
  <gazebo reference="wrist_link"><mu1>1.0</mu1><mu2>1.0</mu2></gazebo>
</robot>